<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitbaba.bitmail.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_setting_email" />
        <TextView
            android:hint="nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_setting_nick" />
        <TextView
            android:hint="tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_setting_tx" />
        <TextView
            android:hint="rx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_setting_rx" />
        <TextView
            android:hint="id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_setting_id" />

        <CheckBox
            android:text="Block if strangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_check_blockStranger" />

    </LinearLayout>
</FrameLayout>
